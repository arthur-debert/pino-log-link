{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "npm start",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "http://localhost:9000",
                "uriFormat": "http://localhost:9000"
            },
            "restart": true,
            "preLaunchTask": "stop-other-launches"
        }
    ]
}