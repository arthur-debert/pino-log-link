{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES6",
        "module": "ES6", // Use ES modules (ES6)
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
}
